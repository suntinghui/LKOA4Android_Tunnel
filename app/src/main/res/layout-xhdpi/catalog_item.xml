<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/catalogCellImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:contentDescription="@string/app_name"
        android:src="@drawable/catalog_icon_0" />

    <ImageView
        android:id="@+id/badgeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="7dip"
        android:layout_marginTop="15dip"
        android:contentDescription="@string/app_name"
        android:src="@drawable/badge_ifaux" />

    <TextView
        android:id="@+id/badgeNumText"
        android:layout_width="26dip"
        android:layout_height="26dip"
        android:layout_gravity="right"
        android:layout_marginRight="7dip"
        android:layout_marginTop="15dip"
        android:gravity="center"
        android:lines="1"
        android:text="@string/testBadge"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/catalogTitleText"
        style="@style/TextView16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dip"
        android:lines="1"
        android:text="@string/app_name" />

</FrameLayout>